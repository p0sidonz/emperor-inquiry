generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserInquiry {
  id            String    @id @default(uuid())
  firstName     String
  lastName      String?
  email         String?
  phone         String?
  isMember      Boolean?
  isReturning   Boolean?
  convertedDate DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Userpackage {
  id        String      @id @default(uuid())
  name      String
  type      packageType @default(GENERAL)
  price     Int
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum packageType {
  GENERAL
  PERSONAL
}
